module.exports = (data) => {
  db.fn('check', data.connection, 'stats', data.name).then((exists) =>{
    if (exists == false) {
      console.log('no stats entry found, creating now..');
        db.fn('create', data.connection, 'stats', data.name).then(()=>{});
    } else {}
  });
  db.fn('check', data.connection, 'richlist', data.name).then((exists)=>{
    if (exists == false) {
      console.log('no richlist entry found, creating now..');
        db.fn('create', data.connection, 'richlist', data.name).then(() =>{});
    }
  });
}

